
generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  
}

model User {
  id    Int @id @default(autoincrement())
  email String @unique
  password String
  tokens    RefreshToken[]
  sessions  Session[]
  createdAt DateTime @default(now())
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model Session {
  id      String   @id
  sid     String   @unique
  data    String   @db.Text
  expires Int

  userId  Int?
  user    User?    @relation(fields: [userId], references: [id])
}